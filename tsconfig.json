{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "rootDir": "src",
        "outDir": "lib",
        "declarationDir": "types",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "declaration": true,
        "inlineSourceMap": true,
        "noErrorTruncation": true,
        "resolveJsonModule": true,
        "incremental": true,
        "tsBuildInfoFile": ".tsbuildinfo",
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
    ],
    "files": [
        "package.json",
    ],
}
