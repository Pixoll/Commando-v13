{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": [
        "*.d.ts"
    ],
    "rules": {
        "comma-dangle": "off",
        "eol-last": "warn",
        "indent": [
            "warn",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "warn",
            {
                "code": 125
            }
        ],
        "multiline-ternary": "off",
        "new-cap": "error",
        "no-var": "error",
        "operator-linebreak": "off",
        "semi": [
            "warn",
            "always"
        ],
        "space-before-function-paren": "off",
        "quotes": [
            "warn",
            "single"
        ],
        "no-unused-vars": "error",
        "no-multiple-empty-lines": [
            "warn",
            {
                "max": 1
            }
        ],
        "eqeqeq": "error",
        "prefer-const": "warn",
        "camelcase": "warn",
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ]
    }
}